<!DOCTYPE html>
<html>
  <head>
    <title>GerenciadorBiblioteca</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script>
      function limparAlert() {
        document.getElementById("alert").style.display = "none";
      }
    </script>
    
  </head>

  <body>
    <%= render 'layouts/header' %>
    
    <div class="container">
      <div id="alert">
      <% flash.each do |message_type, message| %>
        <%= content_tag 'div', class: "alert alert-#{message_type} alert-dismissible", role: 'alert' do %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close" onclick="limparAlert();">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= message %>
        <% end %>
      <% end %>
        </div>
      <%= yield %>

      
      
    </div>
  <div class="container">
  <div class ="rodapeHome">
    <%= render 'layouts/footer' %>
    </div>
  </div>
  </body>
</html>
