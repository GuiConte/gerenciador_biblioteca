<%= form_for @reader do |f| %>
  <%= render 'layouts/error_messages', object: f.object %>
  
  <div class="row">
    <div class="col-md-6"> 
      <div class="form-group">
        <%= f.label :nome %>
        <%= f.text_field :nome, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :cpf %>
        <%= f.text_field :cpf, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6"> 
      <div class="form-group">
        <%= f.label :endereco %>
        <%= f.text_field :endereco, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :cidade %>
        <%= f.text_field :cidade, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2"> 
      <div class="form-group">
        <%= f.label :uf %>
        <%= f.text_field :uf, class: 'form-control' %>
      </div>
    </div>
  
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :telefone %>
        <%= f.text_field :telefone, class: 'form-control' %>
      </div>
    </div>
  </div>

  <%= f.submit 'Salvar', class: 'btn btn-block btn-success' %>
<% end %>